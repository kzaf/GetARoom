<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayout2"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="top|center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="82dp"
        android:layout_height="76dp"
        android:src="@drawable/getaroom" />

    <TextView
        android:id="@+id/info_su_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|top"
        android:gravity="center"
        android:text="Welcome to Get A Room App. Please bear in mind that this app is still on beta phase and not for actual use."
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nobookingtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_su_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center|top"
        android:gravity="center"
        android:text="Select role depending on being a hotel owner or a traveler. Please use only english for registration as multilanguage is not supported yet. Have fun and thanks for checking out my work!"/>

</LinearLayout>